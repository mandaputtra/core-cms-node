    function addContent(e, note, inKey) {
      var $showNotes = $('#showNotes');
      var content = note || $('#summernote').summernote('code');
      var $theNotes = $('.theNotes');

      if (e) e.preventDefault()
      if (content === '<p><br></p>') {
        return;
      }

      //- console.log('TEST', $theNotes);
